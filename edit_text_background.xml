<?xml version="1.0" encoding="utf-8"?>
<!-- این selector باعث می‌شود رنگ حاشیه فیلد هنگام انتخاب تغییر کند -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- حالتی که فیلد انتخاب شده (focused) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_card" />
            <stroke
                android:width="1.5dp"
                android:color="@color/edit_text_border_focused" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- حالت پیش‌فرض -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_card" />
            <stroke
                android:width="1dp"
                android:color="@color/edit_text_border" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>