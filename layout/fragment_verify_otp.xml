<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="rtl"
    tools:context=".ui.auth.VerifyOtpFragment">

    <!-- تصویرسازی شما در بالای صفحه -->
    <ImageView
        android:id="@+id/iv_illustration"
        android:layout_width="450dp"
        android:layout_height="460dp"
        android:alpha="0.8"
        android:contentDescription="@string/verification_illustration_new"
        android:scaleType="centerCrop"
        android:src="@drawable/illustration_verify_otp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_sheet_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- خط راهنما برای ایجاد فاصله بیشتر بین تصویر و کارت -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sheet_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <!-- کارت پایینی با گوشه‌های گرد برای محتوا -->

    <!-- ProgressBar -->

    <LinearLayout
        android:id="@+id/ll_content_section"
        android:layout_width="435dp"
        android:layout_height="395dp"
        android:background="@drawable/bottom_sheet_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingTop="40dp"
        android:paddingEnd="32dp"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_sheet_top"
        app:layout_constraintVertical_bias="1.0">

        <!-- عنوان اصلی -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verify_otp_title_short"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- متن راهنما -->

        <!-- باکس‌های کد با طراحی خط زیرین -->

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            tools:text="@string/verify_otp_subtitle_short" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_otp_1"
                style="@style/OtpEditText"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:autofillHints="smsOTPCode"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/et_otp_2"
                style="@style/OtpEditText"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/et_otp_3"
                style="@style/OtpEditText"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/et_otp_4"
                style="@style/OtpEditText"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                tools:ignore="LabelFor" />
        </LinearLayout>


        <!-- دکمه تایید -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/login_button_color"
            android:text="@string/verify_button_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="16dp" />

        <!-- بخش تایمر و ارسال مجدد کد -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_resend_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="ارسال مجدد کد"
                android:textColor="@color/login_button_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                tools:text="ارسال مجدد تا 01:25" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:indeterminateDrawable="@drawable/loader_heart_animated"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
