<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAnalysis"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="1dp"
    app:strokeColor="@color/edit_text_border"
    app:cardBackgroundColor="@color/delight_card_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- سطر عنوان وضعیت + دکمه «توضیحات بیشتر» -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewGrowthStatus"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_growth_status"
                app:tint="@color/default_button" />

            <TextView
                android:id="@+id/textViewGrowthStatusLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="وضعیت رشد"
                android:textColor="@color/text_primary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="توضیحات بیشتر"
                android:textColor="@color/primary_text_color"
                android:drawableStart="@drawable/ic_chevron_left"
                android:drawablePadding="6dp" />
        </LinearLayout>

        <!-- متن توضیح کوتاه وضعیت -->
        <TextView
            android:id="@+id/textViewGrowthStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="برای مشاهده تحلیل، اطلاعات را ثبت کنید."
            android:textColor="@color/text_secondary"
            android:textSize="15sp" />

        <!-- گیج صدک‌ها -->
        <FrameLayout
            android:id="@+id/gaugeContainer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/gauge_bg"
            android:clipToPadding="false"
            android:padding="0dp">

            <!-- باندها: قرمز/زرد/سبز/زرد/قرمز -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/gauge_red" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@drawable/gauge_yellow" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:background="@drawable/gauge_green" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@drawable/gauge_yellow" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/gauge_red" />
            </LinearLayout>

            <!-- سوزن -->
            <View
                android:id="@+id/gaugeNeedle"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/text_primary" />

            <!-- دکمه/ناب کوچک روی سوزن -->
            <View
                android:id="@+id/gaugeKnob"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/gauge_knob"
                android:translationY="-5dp" />

            <!-- برچسب فارسی سطح -->
            <TextView
                android:id="@+id/gaugeNeedleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نزدیک مرز"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_needle_label"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textSize="11sp" />
        </FrameLayout>

        <!-- راهنمای رنگ‌ها -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/gauge_green_chip"
                android:layout_marginEnd="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/secondary_text_color"
                android:text="طبیعی" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/gauge_yellow_chip"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/secondary_text_color"
                android:text="نزدیک مرز" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/gauge_red_chip"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/secondary_text_color"
                android:text="نیاز به بررسی" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
