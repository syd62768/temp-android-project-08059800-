<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:layoutDirection="rtl">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ثبت اطلاعات جدید رشد"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/editTextDialogWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="وزن (به کیلوگرم)"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/editTextDialogHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="قد (به سانتی‌متر)"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/editTextDialogHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="دور سر (به سانتی‌متر)"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/buttonDialogConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ثبت"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"/>

</LinearLayout>